    <div class="container p-2 my-1 text-center">
        <p id="firstpara"> Please fill up the information of the item that you wish to sell below. Please verify the
            information about your product beforehand.</p>
    </div>
    <div class="container text-center" id="formcontainer">
        <div class="row justify-content-center">
            <div class="col"></div>
            <div class="col text-center">
                <form action="/sellitems" class="sellform" name="myform" method="post">
                    <legend>Fill the form mentioned below:</legend>
                    <div>
                        <label for="types">Type of Item:</label>
                        <input list="types" name="ftype" placeholder="Enter type of item" required>
                        <datalist id="types" class="boxes">
                            <option value="Electronics"></option>
                            <option value="Furniture"></option>
                            <option value="Vehicles"></option>
                            <option value="Fashion"></option>
                            <option value="Decoratory items"></option>
                        </datalist>
                        
                    </div>
                    <div>
                        <label for="model">Product:</label>
                        <input type="text" name="fmodel" id="model" class="boxes"
                        placeholder="Enter Product Name" required>
                    </div>
                    <div>
                        <label for="address">Address/Block No:</label>
                        <input type="text" name="fadd" id="address" class="boxes" pattern="[A-Z]-[0-9]+"
                            placeholder="address format eg:- A-23" required>
                    </div>
                    <div>
                        <label for="mobno">Mobile No:</label>
                        <input type="text" name="fmobno" id="mobno" class="boxes" pattern="[0-9]{10}"
                            placeholder="Eneter Your Mobile No." required>
                    </div>
                    <div>
                        <label for="price">Expected Price:</label>
                        <input type="text" name="fprice" id="price" class="boxes" pattern="[0-9]+.[0-9]{2}"
                            placeholder=" price format eg:- 100.00" required>
                    </div>
                    <div>
                        <p id="productpara">Is the product damaged?</p>
                        <input type="radio" name="fno" id="yes" class="radio" value="1" required>
                        <label for="yes">Yes</label>
                        <input type="radio" name="fno" id="no" class="radio" value="0">
                        <label for="no">No</label>
                    </div>
                    <div>
                        <p id="productpara">Is the price negotiable?</p>
                        <input type="radio" name="fyes1" id="yes1" class="radio" value="1" required>
                        <label for="yes">Yes</label>
                        <input type="radio" name="fyes1" id="no1" class="radio" value="0">
                        <label for="no">No</label>
                    </div>
                    <div>
                        <label for="img">Upload 4 images of your product:</label>
                        <input type="file" name="fnewfile1" class="file" id="img" accept="images/*">
                        <input type="file" name="fnewfile2" class="file" id="img" accept="images/*">
                        <input type="file" name="fnewfile3" class="file" id="img" accept="images/*">
                        <input type="file" name="fnewfile4" class="file" id="img" accept="images/*">
                    </div>
                    <input type="submit" value="Submit" id="submit" class="button">
                    <input type="reset" value="Reset" id="reset" class="button">

                </form>
